<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textoMejorDelDia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="4dp"
                android:text="@string/pr_xima_estaci_n_pencho_y_aida_fm"
                android:textColor="@color/unselected_tabtext"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/anaranjado">

                <com.ionicframework.penchoyaida233650.util.ImageviewAdapter
                    android:id="@+id/ImagenCabecera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/videos" />
            </RelativeLayout>


            <com.github.paolorotolo.expandableheightlistview.ExpandableHeightListView
                android:id="@+id/ListadoVideos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


            </com.github.paolorotolo.expandableheightlistview.ExpandableHeightListView>


        </LinearLayout>
    </ScrollView>

</LinearLayout>