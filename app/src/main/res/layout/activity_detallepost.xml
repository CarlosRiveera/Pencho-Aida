<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarrillento"
    android:orientation="vertical">
    ​

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            ​

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/blanco"
                android:orientation="vertical">
                ​

                <LinearLayout
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_imagen">

                    <ImageView
                        android:id="@+id/imagenpri"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/pancho_holder" />
                    ​
                </LinearLayout>
                ​
            </RelativeLayout>
            ​

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/amarrillento"
                android:orientation="vertical">
                ​


                ​

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    ​

                    <SeekBar
                        android:id="@+id/progress1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textinicio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/progress1"
                        android:layout_gravity="top"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-8dp"
                        android:layout_weight="1"
                        android:text="0.00" />
                    ​

                    <TextView
                        android:id="@+id/textTitulo"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/textinicio"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="Tituto"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                    ​

                    <TextView

                        android:id="@+id/textfin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/progress1"
                        android:layout_gravity="top"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="-8dp"
                        android:layout_weight="1"
                        android:gravity="right|top"
                        android:text="0:00:00" />
                </RelativeLayout>
                ​

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="13dp"
                    android:id="@+id/textdetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     />
                ​

                <RelativeLayout
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    ​

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">
                        ​

                        <ImageView
                            android:id="@+id/btnquinmenos"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:src="@mipmap/menosquince_icon" />
                        ​

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/btnunomenos"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@mipmap/ic_back" />
                        ​

                        <ImageView
                            android:id="@+id/btnplay"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:src="@drawable/btnplay" />
                        ​

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/btnunomas"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@mipmap/ic_next" />
                        ​

                        <ImageView
                            android:id="@+id/btnquincemas"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:src="@mipmap/masquince_icon" />
                        ​
                        ​
                    </LinearLayout>
                    ​

                    <ImageView
                        android:visibility="gone"
                        android:layout_marginRight="5dp"
                        android:id="@+id/btncompartir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_share_nav"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                    ​
                </RelativeLayout>
                ​

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    ​

                    <ImageView
                        android:id="@+id/btnmin"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:src="@mipmap/volume_min" />
                    ​

                    <SeekBar
                        android:id="@+id/progress2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5" />
                    ​

                    <ImageView
                        android:id="@+id/btnmax"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:src="@mipmap/volume_max" />
                </LinearLayout>
            </LinearLayout>
            ​
        </LinearLayout>
    </ScrollView>
</LinearLayout>