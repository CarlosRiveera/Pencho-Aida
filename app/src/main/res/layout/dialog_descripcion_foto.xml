<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button

                android:id="@+id/btnCerrar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/ImagenCompartir"
                android:layout_gravity="right"
                android:layout_marginTop="-5dp"
                android:background="@drawable/close_icono" />

            <com.ionicframework.penchoyaida233650.util.TouchImageView

                android:id="@+id/ImagenCompartir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/pencho_podcast" />

            <TextView
                android:id="@+id/TextoDescripcionImagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ImagenCompartir"
                android:layout_margin="10dp"
                android:text="DESCRIPCION "
                android:textColor="@color/negro" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TextoDescripcionImagen"
                android:background="@color/anaranjado">


                <ImageView
                    android:id="@+id/compartirFoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:foregroundGravity="center"
                    android:src="@drawable/share1" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>