<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/Layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/ImagenDetallePodcast"
            android:src="@drawable/avatar_penchoyaida"
            android:layout_width="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Titulo"
                android:textSize="13sp"
                android:textColor="@color/negro"
                android:layout_marginTop="5dp"
                android:layout_margin="5dp"
                android:id="@+id/TituloPodCast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:textSize="12sp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/grisBarra"
                android:text="Descripcion"
                android:maxLines="6"
                android:id="@+id/DescripcionPodCast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_below="@id/Layout1"
        android:layout_width="match_parent"
        android:background="@color/anaranjado"
        android:layout_height="1dp" />


</LinearLayout>